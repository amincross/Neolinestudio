<?xml version="1.0" encoding="utf-8"?><!-- item_list.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#141519"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <!-- Rounded avatar and user name with online time on top left -->
        <RelativeLayout
            android:id="@+id/avatarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/ic_more" />

            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/big_image" />


            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/avatarImageView"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/usernameTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextView"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/avatarImageView"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/onlineTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextView"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/usernameTextView2"
                android:text="Online"
                android:textColor="#999999"
                android:textSize="12sp" />

        </RelativeLayout>

        <!-- Long text after avatar -->
        <TextView
            android:id="@+id/longTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatarLayout"
            android:layout_marginTop="8dp"
            android:text="Long text goes here"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Round cornered big image -->

        <ImageView
            android:id="@+id/bigImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/longTextView"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/big_image" />

        <!-- Bottom buttons: Like, Comment, Retweet, View -->
        <LinearLayout
            android:id="@+id/bottomButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bigImageView"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_like"
                app:tint="#cbcbcb" />

            <TextView
                android:id="@+id/likeCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="#cbcbcb"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_comment"
                app:tint="#cbcbcb" />

            <TextView
                android:id="@+id/commentCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="#cbcbcb"
                android:textSize="12sp" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/retweetIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_retweet"
                app:tint="#cbcbcb" />

            <TextView
                android:id="@+id/retweetCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="#cbcbcb"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_share"
                app:tint="#cbcbcb" />

            <ImageView
                android:id="@+id/viewIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_viewcount"
                app:tint="#cbcbcb" />

            <TextView
                android:id="@+id/viewCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="#cbcbcb"
                android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/line"
            android:layout_marginTop="8dp"
            android:layout_below="@id/bottomButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#43FFFFFF"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBid"
            android:layout_marginTop="4dp"
            android:layout_below="@id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created 30 Jun 2023"
                android:textColor="#cbcdcd" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBid"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/bottom_nav_background"
                android:text="Bid" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
